<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Item total</th>
      <th>Shipment total</th>
      <th>Decimal</th>
      <th>Payment total</th>
      <th>User</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.total %></td>
        <td><%= order.item_total %></td>
        <td><%= order.shipment_total %></td>
        <td><%= order.decimal %></td>
        <td><%= order.payment_total %></td>
        <td><%= order.user.email %></td>
        <td><%= order.shop.name %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

